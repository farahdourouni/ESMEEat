<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img3"
    tools:context=".Reserver2">


    <EditText
        android:id="@+id/reserva_prenom"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contour"
        android:drawablePadding="500dp"
        android:gravity="center"
        android:hint="Nom et Prénom"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/reservation"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contour"
        android:drawablePadding="500dp"
        android:gravity="center"
        android:hint="Nombre places à reserver"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Bienvenue sur ESME'eat !"
        android:textColor="@color/cyanbis"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/nbre_personne_presente"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Reserver votre place"
        android:textColor="@color/cyanbis"
        android:textSize="25sp"
        android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bouton_validation_reserva"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/cyan"
        android:text="VALIDER" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_esme"

            />


    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"

        android:src="@drawable/logoesmeeat" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"

        android:layout_marginEnd="9dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logout" />

    <ImageView
        android:id="@+id/retouracceuil"
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/image_acceuil"

         />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/reservation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="43dp"
        android:spinnerMode="dialog"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/cyan"
        />


</RelativeLayout>